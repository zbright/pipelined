`include "cpu_types_pkg.vh"

module extender
(
 input logic [15:0] immediate,
 input logic [1:0] extend_code,
 output cpu_types_pkg::word_t extended_imm
);

always_comb
  begin    
     casez(extend_code)
       2'b00://Zero
	 begin
	    extended_imm = {16'h0000, immediate};
	 end
       2'b01: //Sign
	 begin
	    extended_imm ={{16{immediate[15]}}, immediate};
	 end
       default:
	 begin
	    extended_imm = 32'hXXXXXXXX;
	 end
       endcase
  end // always_comb
endmodule

   
   
